# -------- Postgres (inside the SLURM job on localhost) --------
DATABASE_URL=postgresql://kalshi:kalshi@127.0.0.1:5432/kalshi

# Where Postgres stores data on the host filesystem (persistent)
PGDATA_HOST=/scratch/$USER/kalshi_pgdata

# -------- Kalshi API --------
KALSHI_HOST=https://api.elections.kalshi.com/trade-api/v2

# Required for WebSockets (WS requires auth) :contentReference[oaicite:8]{index=8}
KALSHI_API_KEY_ID=
KALSHI_PRIVATE_KEY_PEM_PATH=/path/to/private_key.pem

# -------- Only ingest these event strike_period values --------
# (Kalshi returns strike_period as a string field on events) :contentReference[oaicite:9]{index=9}
STRIKE_PERIODS=hour,day

# -------- Loop frequencies --------
DISCOVERY_SECONDS=1800      # refresh open hourly/daily events + outcomes
WS_SUB_REFRESH_SECONDS=60   # update WS subscription based on active_markets diff
BACKFILL_SECONDS=900        # scan recently closed/settled events & backfill candles

# -------- Candlestick backfill tuning --------
# Candlesticks period_interval is minutes: {1,60,1440} :contentReference[oaicite:10]{index=10}
CANDLE_MINUTES_FOR_HOUR=1
CANDLE_MINUTES_FOR_DAY=60
CANDLE_LOOKBACK_HOURS=72

# -------- Optional: safety throttles --------
MAX_ACTIVE_TICKERS=5000
WS_BATCH_SIZE=500           # markets per update_subscription call
